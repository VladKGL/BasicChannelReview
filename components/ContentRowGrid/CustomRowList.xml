<?xml version="1.0" encoding="UTF-8"?>
<component name="CustomRowList" extends="Group">
    <script type="text/brightscript" uri="CustomRowList.brs" />
    <interface>
        <field id="rowItemFocused" type="vector2d" alwaysNotify="true" alias="contentGrid.rowItemFocused" />
        <field id="content" type="node" />
        <field id="contentManagerType" type="string" value="grid" />
        <field id="saveState" type="boolean" alwaysNotify="true" value="false" />
        <field id="wasShown" type="boolean" alwaysNotify="true" value="false" />
        <field id="wasClosed" type="boolean" alwaysNotify="true" value="false" />
        <field id="query" type="string" onChange="ChangeContent"/>
        <field id="contentsDict" type="assocarray"/>
    </interface>

    <children>
        <Rectangle color="#000000" width="1280" height="1920" translation="[0,0]" />
        <RowList id="contentGrid" 
        translation="[310, 50]"
        numRows="2" 
        itemComponentName="CustomRowListItem" 
        itemSize="[ 1608, 320 ]" 
        itemSpacing="[ 0, 50 ]" 
        rowItemSize="[ [300, 300] ]" 
        rowItemSpacing="[ [ 50, 0 ] ]" 
        rowLabelOffset="[ [ 0, 20 ] ]" 
        showRowLabel="[ true ]" 
        drawFocusFeedback="true" 
        vertFocusAnimationStyle="fixedFocus" 
        rowFocusAnimationStyle="fixedFocus" />
    </children>
</component>